<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:background="#F7F7F7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Part1Activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgExit"
        android:layout_gravity="right"
        android:src="@drawable/exxxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:layout_gravity="left"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/alarm_clock"
            android:layout_width="70dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tvTimer"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="00:00"
            android:textColor="#E90404"
            android:textSize="18sp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="#1212A5"
            android:text="Number: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/count"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:textColor="#E40303"
            android:textStyle="bold"
            android:text="0/10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/tvScore"
        android:textColor="#6F3535"
        android:textStyle="bold"
        android:text="0%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_marginLeft="10dp"
        android:id="@+id/tvQuestion"
        android:layout_marginTop="20dp"
        android:textColor="#0F0E0E"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Câu hỏi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imgView"
        android:layout_gravity="center"
        android:src="@drawable/abc"
        android:layout_width="380dp"
        android:layout_height="240dp" />

    <RadioGroup

        android:layout_gravity="center"
        android:id="@+id/rdGroup"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:text="A"
            android:textStyle="bold"
            android:textColor="#E45F0B"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:id="@+id/rdA"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="B"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#E45F0B"
            android:textSize="18sp"
            android:id="@+id/rdB"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="C"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="#E45F0B"
            android:textSize="18sp"
            android:id="@+id/rdC"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton

            android:text="D"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="#E45F0B"
            android:textSize="18sp"
            android:id="@+id/rdD"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="25sp">

        <ImageView
            android:id="@+id/btnStart"
            android:layout_width="30sp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:src="@drawable/play_button" />

        <TextView
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/tvTime"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="00:00"
            android:textColor="#0F110F" />

        <SeekBar
            android:layout_marginLeft="3dp"
            android:id="@+id/seekBar"
            android:layout_width="200dp"
            android:layout_height="match_parent" />

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:id="@+id/tvTimeTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#111111"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="#0C0B0B"
                android:id="@+id/tvCheck"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Done"
                android:textColor="#FCF9F9"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:visibility="gone"
                android:background="#0C0C0C"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tvXemDiem"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Point"
                android:textColor="#FCF7F7"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <Button
            android:textColor="#F6F6F8"
            android:background="#0E0D0D"
            android:layout_gravity="right"
            android:id="@+id/btnNext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Next" />

    </LinearLayout>
        <TextView
            android:visibility="gone"
            android:textColor="#FF0026"
            android:layout_marginLeft="30dp"
            android:id="@+id/tvAnswer"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




</LinearLayout>